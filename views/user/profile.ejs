
<%- include('../partials/header.ejs')%>
<div class = "content">
    <h2>Welcome, <%=user.firstName%></h2>
    <%if(connections.length) {%>
    <table class=connectionTable>
            <tr>
                <th>Connection</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
    <%connections.forEach(connection=> {%>
        <tr>
            <form>
            <td><a href ='/connections/<%= connection.id%>'><%= connections.title%></a></td>
            <td><%= connection.topic%></td>
            <td><button type="submit" formmethod="GET" formaction="../connections/<%= connection.id%>/edit">Edit</button> <button type="submit" formmethod="POST" formaction="../connections/<%= connection.id%>?_method=DELETE">Delete</button></td>
            </form>
        </tr>
        <%}); %>
    </table>
    <% } else {%>
        <p>You haven't created any events</p>
    <%}%>

    <%if (rsvps.length) {%>
        <h3>You have RSVPed to the following connections</h3>
    <%} else {%>
        <h3>You have not RSVPed to any connections</h3>
    <%}%>

  
        <table class="connectionTable">
            <%if (rsvps.length) {%>
            <tr>
                <th>Connection</th>
                <th>Category</th>
                <th>Going?</th>
            </tr>
            <%rsvps.forEach(rsvp => {%>
            <tr>
                <td><%= rsvp.connection.title%></td>
                <td><%= rsvp.connection.topic%></td>
                <td><%= rsvp.rsvp%></td>
            </tr>
            <%});%>
            </table>
            <%} else {%>
                <p>You have no RSVP's!</p>
            <%}%>
      
 



    </div>
    <%- include('../partials/footer.ejs')%>